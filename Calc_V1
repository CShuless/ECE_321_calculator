// Lab2 Simple Calculator
// Curtis Shuman

# include <stdio.h>

int main() {
    int N1, N2, Result, Operation;


printf("Enter first number: ");   // getting input
// check for integer
while (scanf("%d", &N1 ) != 1){  
    printf("Invalid Input. Please enter an integer: ");
}

printf("Enter second number: ");   // getting input
// check for integer
while (scanf("%d", &N2 ) != 1){  
    printf("Invalid Input. Please enter an integer: ");

}

printf("Enter '1' for addition, '2' for subtraction or '3' for multiplication: ");
while(1){
    scanf(&Operation)
    if (Operation == 1 || Operation == 2 || Operation == 3) {
        break;
    } else{
        printf("Invalid choice. Please enter '1', '2' or '3'");
    }
}


if (Operation == 1){
    Result = N1+N2;
    printf("The result of adding %d and %d is %d/n", N1, N2, Result);
}else if (Operation ==2){
    Result = N1-N2;
    printf("The result of subtracting %d and %d is %d/n", N1, N2, Result);
}else if (Operation ==3){
    Result = N1*N2;
    printf("The result of multiplying %d and %d is %d/n", N1, N2, Result);
}







}